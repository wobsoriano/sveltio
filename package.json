{
  "name": "sveltio",
  "version": "1.0.6",
  "description": "Proxy-state for Svelte using Valtio.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wobsoriano/sveltio.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build-fast": "tsup src/index.ts --format esm,cjs",
    "build": "pnpm run build-fast -- --dts-resolve --minify",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "release": "bumpp --commit --push --tag && npm publish",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint --ext=js,ts .",
    "lint:fix": "eslint --ext=js,ts . --fix"
  },
  "dependencies": {
    "valtio": "^1.6.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.8",
    "@sveltejs/vite-plugin-svelte": "^1.0.0-next.39",
    "@testing-library/svelte": "^3.1.0",
    "bumpp": "^7.1.1",
    "eslint": "^8.11.0",
    "jsdom": "^19.0.0",
    "lint-staged": "^12.3.5",
    "simple-git-hooks": "^2.7.0",
    "svelte": "^3.46.4",
    "tsup": "^5.12.1",
    "typescript": "^4.3.5",
    "vitest": "^0.9.3"
  },
  "lint-staged": {
    "{src,test}/**/*.{js,ts}": [
      "eslint --fix"
    ]
  },
  "homepage": "https://github.com/wobsoriano/sveltio#readme",
  "eslintConfig": {
    "extends": "@antfu"
  },
  "eslintIgnore": [
    "dist",
    "node_modules"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
